{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas API",
        "description": "Atlas é uma API para gerenciar usuários",
        "version": "1.0.0"
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Criar usuário",
                "description": "Cria um novo usuário na aplicação.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "required": true,
                                        "type": "string"
                                    },
                                    "email": {
                                        "required": true,
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "name": "John Doe",
                                "email": "john@mail.com"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "691864fe-0657-45bd-8fc7-1015b2ba947a"
                                        },
                                        "admin": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "John Doe"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "john@mail.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "example": "2021-03-10"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "example": "2021-03-10"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Já existe um usuário com esse email cadastrado."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Listar  usuários",
                "description": "Retorna uma lista com todos os usuários cadastrados",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "691864fe-0657-45bd-8fc7-1015b2ba947a"
                                        },
                                        "admin": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "John Doe"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "john@mail.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "example": "2021-03-10"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "example": "2021-03-10"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Você precisa ser administrador para realizar essa operação."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}